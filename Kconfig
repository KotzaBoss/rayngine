mainmenu "Project Configuration"

comment "Do not neglect to confirm your changes have taken effect"


config VERBOSE
	bool "Verbose"


choice BUILD
    prompt "Build type"

    config BUILD_DEBUG
        bool "Debug"
    config BUILD_RELEASE
        bool "Release"
endchoice

config BUILD_TYPE
	# Omitting the prompt makes it invisible to the user
	# and can be configured implicitely through other configs.
	string
	default "Debug" if BUILD_DEBUG
	default "Release" if BUILD_RELEASE


config ODIN_COLLECTION
	string "Where is the -collection:rayngine"
	default "${PROJECT_SOURCE_DIR}/src"


